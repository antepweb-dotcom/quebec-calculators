generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Site Configuration (Ads, Alerts)
model SiteConfig {
  id             Int     @id @default(1)
  isAdsEnabled   Boolean @default(true)
  adSenseId      String  @default("ca-pub-XXXXXXXXXXXXXXXX") // Client ID
  bannerSlotId   String  @default("") // Top Banner
  sidebarSlotId  String  @default("") // Sidebar Box
  alertMessage   String  @default("")
  isAlertActive  Boolean @default(false)
}

// Analytics (Page Visit Tracking)
model Analytics {
  id        String   @id @default(uuid())
  path      String   // e.g., "/calcul-impot"
  createdAt DateTime @default(now())
  
  @@index([path])
  @@index([createdAt])
}